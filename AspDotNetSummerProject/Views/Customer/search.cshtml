
@{
    ViewBag.Title = "search";
}

<div class="d-flex justify-content-center mt-5">

    <form action="" method="post">
        <h2>Set your Load and unload Area</h2>
        Load Location:<input type="text" name="start_location" class="form-control" />
        @Html.ValidationMessage("start_location", new { @class = "text-danger" })<br />
        Unload Location:<input type="text" name="end_location" class="form-control" />
        @Html.ValidationMessage("end_location", new { @class = "text-danger" })<br />
        <input type="submit" name="submit" class="btn btn-primary" />
    </form>
</div>

